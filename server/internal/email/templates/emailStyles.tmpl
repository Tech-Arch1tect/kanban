{{define "emailStyles"}}
<style>
  body {
    font-family: Arial, sans-serif;
    line-height: 1.5;
    background-color: #f9f9f9;
    color: #333;
    margin: 0;
    padding: 20px;
  }
  .container {
    max-width: 600px;
    margin: 0 auto;
    background-color: #fff;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  h1 {
    font-size: 24px;
    color: #2c3e50;
    margin-bottom: 10px;
  }
  h2 {
    font-size: 18px;
    color: #555;
    margin-bottom: 10px;
  }
  p {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 20px;
  }
  .small-text {
    font-size: 14px;
    color: #888;
  }
  .btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }
  .btn:hover {
    background-color: #0056b3;
  }
  .code-block {
    font-size: 20px;
    font-weight: bold;
    background: #f4f4f4;
    padding: 10px;
    border-radius: 4px;
    text-align: center;
    margin-bottom: 20px;
  }
</style>
{{end}}
